{% extends 'base.html.twig' %}

{% block body %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-preview">
                    <h2 class="post-title">
                        {{ tweet.text }}
                    </h2>

                    <p class="post-meta">Posted by
                        <a href="{{ path('single_author', {'id': tweet.authorId.id}) }}">{{ tweet.authorId.name }}</a>

                    </p>
                </div>
            </div>
        </div>
    </div>
    <hr>
{% endblock %}

